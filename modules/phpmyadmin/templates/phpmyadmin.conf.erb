Alias /phpmyadmin <%= @path %>
<Directory <%= @path %>>
    Options FollowSymLinks
    DirectoryIndex index.php

    <RequireAny>
        Require local
        Require ip 10.0.1
        Require ip 10.0.2
        Require ip 192.168.1
    </RequireAny>

    <FilesMatch "\.php$">
        SetHandler proxy:unix:/var/run/php5-fpm.sock|fcgi://localhost
    </FilesMatch>

</Directory>

<Directory <%= @path %>/libraries>
    Order Deny,Allow
    Deny from All
</Directory>
<Directory <%= @path %>/setup/lib>
    Order Deny,Allow
    Deny from All
</Directory>
